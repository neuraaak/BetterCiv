    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["config/**/*.js", "config/**/*.cjs", "config/**/*.json", "config/**/*.txt"]
}
