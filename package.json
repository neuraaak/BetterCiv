{
    "name": "betterciv5",
    "description": "Une application web moderne pour explorer et comparer les civilisations de Civilization V",
    "version": "1.3.0",
    "private": true,
    "type": "module",
    "keywords": [
        "civilization",
        "civ5",
        "vue",
        "vite",
        "tailwindcss",
        "primevue",
        "gaming",
        "strategy"
    ],
    "author": "Neuraaak",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/neuraaak/BetterCiv5.git"
    },
    "homepage": "https://github.com/neuraaak/BetterCiv5#readme",
    "bugs": {
        "url": "https://github.com/neuraaak/BetterCiv5/issues"
    },
    "scripts": {
        "dev": "vite --config config/vite.config.js",
        "build": "vite build --config config/vite.config.js && copyfiles -u 1 public/* dist",
        "preview": "vite preview --config config/vite.config.js",
        "deploy": "yarn build && vercel --prod",
        "deploy:dev": "yarn build && vercel",
        "deploy:win": "utils\\deploy.bat",
        "deploy:ps": "powershell -ExecutionPolicy Bypass -File utils\\deploy.ps1",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,vue}\" --fix --config config/eslint.config.js",
        "type-check": "tsc --noEmit",
        "spell": "cspell \"**/*\" --config config/cspell.json",
        "spell:fix": "cspell \"**/*\" --config config/cspell.json --verbose",
        "spell:add": "utils\\add-cspell-word.bat",
        "spell:add:ps": "powershell -ExecutionPolicy Bypass -File utils\\add-cspell-word.ps1",
        "clean": "rimraf dist _temp",
        "clean:all": "rimraf dist _temp node_modules yarn.lock",
        "deps:check": "yarn outdated",
        "deps:update": "yarn upgrade-interactive --latest",
        "deps:update-all": "yarn upgrade --latest",
        "deps:update-prod": "yarn upgrade --latest --scope dependencies",
        "deps:update-dev": "yarn upgrade --latest --scope devDependencies",
        "deps:audit": "yarn audit",
        "deps:fix": "yarn audit --fix",
        "validate": "yarn build && yarn type-check && yarn spell",
        "validate:quick": "yarn type-check && yarn spell",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,md,html}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,css,md,html}\"",
        "config:check": "echo 'Checking configuration files...'",
        "config:lint": "yarn lint",
        "config:spell": "yarn spell",
        "config:type": "yarn type-check",
        "test": "vitest --config config/vitest.config.js",
        "test:ui": "vitest --ui --config config/vitest.config.js",
        "test:run": "vitest run --config config/vitest.config.js",
        "test:coverage": "vitest run --coverage --config config/vitest.config.js",
        "test:watch": "vitest --watch --config config/vitest.config.js"
    },
    "dependencies": {
        "@stagewise-plugins/vue": "^0.6.2",
        "@stagewise/toolbar": "0.6.2",
        "@stagewise/toolbar-vue": "^0.6.2",
        "@tailwindcss/postcss": "^4.1.11",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.0",
        "pinia": "^3.0.3",
        "postcss": "^8.5.6",
        "primeicons": "^7.0.0",
        "primevue": "4.3.6",
        "tailwindcss": "^4.1.11",
        "vue": "^3.5.18",
        "vue3-grid-layout-next": "^1.0.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/test-utils": "^2.4.6",
        "copyfiles": "^2.4.1",
        "cspell": "^9.2.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "eslint-plugin-vue": "^10.3.0",
        "globals": "^16.3.0",
        "jsdom": "^26.1.0",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3",
        "vite": "^7.0.6",
        "vitest": "^3.2.4",
        "vue-eslint-parser": "^10.2.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "yarn": ">=1.22.0"
    }
}
